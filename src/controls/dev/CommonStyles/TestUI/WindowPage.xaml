<local:TestPage
    x:Class="MUXControlsTestApp.WindowPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MUXControlsTestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="40">
        <Button x:Name="btnOpenNewWindowRootPage" AutomationProperties.Name="btnOpenNewWindowRootPage" Margin="2" HorizontalAlignment="Stretch"
            Content="Open new Window with NewWindowRootPage" Click="BtnOpenNewWindowRootPage_Click"/>
        <Button x:Name="btnOpenNewMainPage" AutomationProperties.Name="btnOpenNewMainPage" Margin="2" HorizontalAlignment="Stretch"
            Content="Open new Window with MainPage" Click="BtnOpenNewMainPage_Click"/>
    </StackPanel>
</local:TestPage>
