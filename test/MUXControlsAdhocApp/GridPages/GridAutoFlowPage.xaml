                </local:Grid.ColumnStart>
                <local:Grid.RowStart>
                    <local:GridLocation Index="0"/>
                </local:Grid.RowStart>
                <local:Grid.RowEnd>
                    <local:GridLocation Index="2"/>
                </local:Grid.RowEnd>
                <TextBlock>item-a</TextBlock>
            </Grid>

            <Grid Background="#880000FF">
                <TextBlock>item-b</TextBlock>
            </Grid>

            <Grid Background="#88FF0000">
                <TextBlock>item-c</TextBlock>
            </Grid>

            <Grid Background="#888FBC8F">
                <TextBlock>item-d</TextBlock>
            </Grid>

            <Grid Background="#88BC8FBC">
                <local:Grid.ColumnStart>
                    <local:GridLocation Index="4"/>
                </local:Grid.ColumnStart>
                <local:Grid.RowStart>
                    <local:GridLocation Index="0"/>
                </local:Grid.RowStart>
                <local:Grid.RowEnd>
