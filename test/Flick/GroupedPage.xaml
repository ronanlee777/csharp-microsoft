<Page
    x:Class="Flick.GroupedPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Flick"
    xmlns:mux="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="Dark"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="10" KeyDown="Grid_KeyDown">
        <ScrollViewer x:Name="sv">
            <mux:ItemsRepeater x:Name="rootRepeater">
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" />
                        <mux:ItemsRepeater x:Name="repeater" ItemsSource="{Binding}">
                            <mux:ItemsRepeater.Layout>
                                <mux:UniformGridLayout x:Name="uniformGridLayout" MinColumnSpacing="10" MinRowSpacing="10" ItemsStretch="Fill" MinItemWidth="300" MinItemHeight="200"/>
                            </mux:ItemsRepeater.Layout>
                            <mux:ItemsRepeater.ItemTemplate>
                                <DataTemplate>
                                    <UserControl IsTabStop="True" UseSystemFocusVisuals="True" GotFocus="OnItemGotFocus" >
                                        <Image Source="{Binding UrlMedium}" Stretch="UniformToFill" Tapped="OnItemClicked"  />
                                    </UserControl>
                                </DataTemplate>
                            </mux:ItemsRepeater.ItemTemplate>
                        </mux:ItemsRepeater>
                    </StackPanel>
                </DataTemplate>
            </mux:ItemsRepeater>
        </ScrollViewer>
    </Grid>
</Page>
