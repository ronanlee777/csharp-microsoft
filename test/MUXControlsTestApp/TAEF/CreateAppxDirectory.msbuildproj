<Project ToolsVersion="15.0" DefaultTargets="CreateAppxPackage" xmlns="http://schemas.microsoft.com/developer/msbuild/2003" Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
  </PropertyGroup>
  <Import Project="MUXControlsTestApp.TAEF.build.appxrecipe" />
  <Target Name="CreateAppxPackage">
    <MakeDir Directories="$(LayoutDir)" Condition="!Exists($(LayoutDir))" />
    <Copy SourceFiles="@(AppXManifest);@(AppxPackagedFile)" DestinationFiles="$(LayoutDir)%(PackagePath)" SkipUnchangedFiles="True" />
  </Target>
</Project>