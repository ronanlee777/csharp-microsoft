<Page
    x:Class="MUXControlsTestApp.Samples.GridAutoFlowColumnsScenariosPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MUXControlsTestApp.Samples"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <StackPanel.Resources>
            <Style x:Key="HeaderStyle" TargetType="TextBlock">
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Margin" Value="0,12,0,0"/>
            </Style>
            <Style x:Name="CellText" TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="18"/>
            </Style>
            <Style TargetType="Grid">
                <Setter Property="Background" Value="Orange"/>
                <Setter Property="Margin" Value="2"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="BorderBrush" Value="Black"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
            </Style>
        </StackPanel.Resources>

        <TextBlock>Default grid (unless specified otherwise): 5x2</TextBlock>
        <TextBlock>Columns: 100px 100px 100px 100px 100px</TextBlock>
        <TextBlock>Rows: 60px 60px</TextBlock>
        
        <TextBlock Style="{StaticResource HeaderStyle}">Column flow but no growing</TextBlock>
        <TextBlock>Each item has 2 span, but grid overall doesn't auto grow</TextBlock>

        <controls:LayoutPanel>
            <controls:LayoutPanel.Layout>
                
                <controls:GridLayout AutoFlow="Column">
                    <controls:GridLayout.TemplateColumns>
                        <controls:GridTrackInfo Length="100"/>
                        <controls:GridTrackInfo Length="100"/>
                        <controls:GridTrackInfo Length="100"/>
                        <controls:GridTrackInfo Length="100"/>
                        <controls:GridTrackInfo Length="100"/>
                    </controls:GridLayout.TemplateColumns>
                    <controls:GridLayout.TemplateRows>
                        <controls:GridTrackInfo Length="60"/>
                        <controls:GridTrackInfo Length="60"/>
                    </controls:GridLayout.TemplateRows>
                </controls:GridLayout>

            </controls:LayoutPanel.Layout>
                
            <Grid Background="#FFA500">
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Span="2"/>
                </controls:GridLayout.ColumnEnd>
                <TextBlock Style="{StaticResource CellText}">1</TextBlock>
            </Grid>

            <Grid Background="#0000FF">
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Span="2"/>
                </controls:GridLayout.ColumnEnd>
                <TextBlock Style="{StaticResource CellText}">2</TextBlock>
            </Grid>

            <Grid Background="#FF0000">
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Span="2"/>
                </controls:GridLayout.ColumnEnd>
                <TextBlock Style="{StaticResource CellText}">3</TextBlock>
            </Grid>

            <Grid Background="#8FBC8F">
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Span="2"/>
                </controls:GridLayout.ColumnEnd>
                <TextBlock Style="{StaticResource CellText}">4</TextBlock>
            </Grid>

            <Grid Background="#BC8FBC">
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Span="2"/>
                </controls:GridLayout.ColumnEnd>
                <TextBlock Style="{StaticResource CellText}">5</TextBlock>
            </Grid>

            <Grid Background="#8FBCBC">
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Span="2"/>
                </controls:GridLayout.ColumnEnd>
                <TextBlock Style="{StaticResource CellText}">6</TextBlock>
            </Grid>

        </controls:LayoutPanel>

        <TextBlock Style="{StaticResource HeaderStyle}">Column flow with AutoColumns</TextBlock>
        <TextBlock>Each item has 2 span, grid is set to grow additional columns</TextBlock>

        <controls:LayoutPanel>
            <controls:LayoutPanel.Layout>
                <controls:GridLayout AutoFlow="Column">
                    <controls:GridLayout.TemplateColumns>
                        <controls:GridTrackInfo Length="100"/>
                        <controls:GridTrackInfo Length="100"/>
                        <controls:GridTrackInfo Length="100"/>
                        <controls:GridTrackInfo Length="100"/>
                        <controls:GridTrackInfo Length="100"/>
                    </controls:GridLayout.TemplateColumns>
                    <controls:GridLayout.TemplateRows>
                        <controls:GridTrackInfo Length="60"/>
                        <controls:GridTrackInfo Length="60"/>
                    </controls:GridLayout.TemplateRows>
                    <controls:GridLayout.AutoColumns>
                        <controls:GridTrackInfo Length="100"/>
                    </controls:GridLayout.AutoColumns>
                </controls:GridLayout>
            </controls:LayoutPanel.Layout>

            <Grid Background="#FFA500">
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Span="2"/>
                </controls:GridLayout.ColumnEnd>
                <TextBlock Style="{StaticResource CellText}">1</TextBlock>
            </Grid>

            <Grid Background="#0000FF">
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Span="2"/>
                </controls:GridLayout.ColumnEnd>
                <TextBlock Style="{StaticResource CellText}">2</TextBlock>
            </Grid>

            <Grid Background="#FF0000">
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Span="2"/>
                </controls:GridLayout.ColumnEnd>
                <TextBlock Style="{StaticResource CellText}">3</TextBlock>
            </Grid>

            <Grid Background="#8FBC8F">
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Span="2"/>
                </controls:GridLayout.ColumnEnd>
                <TextBlock Style="{StaticResource CellText}">4</TextBlock>
            </Grid>

            <Grid Background="#BC8FBC">
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Span="2"/>
                </controls:GridLayout.ColumnEnd>
                <TextBlock Style="{StaticResource CellText}">5</TextBlock>
            </Grid>

            <Grid Background="#8FBCBC">
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Span="2"/>
                </controls:GridLayout.ColumnEnd>
                <TextBlock Style="{StaticResource CellText}">6</TextBlock>
            </Grid>

        </controls:LayoutPanel>

        <TextBlock Style="{StaticResource HeaderStyle}">Column flow to fixed index</TextBlock>
        <TextBlock>First 3 set to end at specific index, next 3 don't</TextBlock>
        
        <controls:LayoutPanel>
            <controls:LayoutPanel.Layout>
                <controls:GridLayout AutoFlow="Row">
                    <controls:GridLayout.TemplateColumns>
                        <controls:GridTrackInfo Length="100"/>
                        <controls:GridTrackInfo Length="100"/>
                        <controls:GridTrackInfo Length="100"/>
                        <controls:GridTrackInfo Length="100"/>
                        <controls:GridTrackInfo Length="100"/>
                    </controls:GridLayout.TemplateColumns>
                    <controls:GridLayout.TemplateRows>
                        <controls:GridTrackInfo Length="60"/>
                        <controls:GridTrackInfo Length="60"/>
                    </controls:GridLayout.TemplateRows>
                    <controls:GridLayout.AutoRows>
                        <controls:GridTrackInfo Length="60"/>
                    </controls:GridLayout.AutoRows>
                </controls:GridLayout>
            </controls:LayoutPanel.Layout>

            <Grid Background="#FFA500">
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Index="3"/>
                </controls:GridLayout.ColumnEnd>
                <TextBlock Style="{StaticResource CellText}">1 (->index#3)</TextBlock>
            </Grid>

            <Grid Background="#0000FF">
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Index="3"/>
                </controls:GridLayout.ColumnEnd>
                <TextBlock Style="{StaticResource CellText}">2 (->index#3)</TextBlock>
            </Grid>

            <Grid Background="#FF0000">
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Index="3"/>
                </controls:GridLayout.ColumnEnd>
                <TextBlock Style="{StaticResource CellText}">3 (->index#3)</TextBlock>
            </Grid>

            <Grid Background="#8FBC8F">
                <TextBlock Style="{StaticResource CellText}">4</TextBlock>
            </Grid>

            <Grid Background="#BC8FBC">
                <TextBlock Style="{StaticResource CellText}">5</TextBlock>
            </Grid>

            <Grid Background="#8FBCBC">
                <TextBlock Style="{StaticResource CellText}">6</TextBlock>
            </Grid>

        </controls:LayoutPanel>

        <TextBlock Style="{StaticResource HeaderStyle}">Find the gap</TextBlock>
        <TextBlock>Orange item has no specified position (but needs span 2)</TextBlock>
        <controls:LayoutPanel>
            <controls:LayoutPanel.Layout>
                <controls:GridLayout AutoFlow="Row">
                    <controls:GridLayout.TemplateColumns>
                        <controls:GridTrackInfo Length="100"/>
                        <controls:GridTrackInfo Length="100"/>
                        <controls:GridTrackInfo Length="100"/>
                        <controls:GridTrackInfo Length="100"/>
                        <controls:GridTrackInfo Length="100"/>
                    </controls:GridLayout.TemplateColumns>
                    <controls:GridLayout.AutoRows>
                        <controls:GridTrackInfo Length="60"/>
                    </controls:GridLayout.AutoRows>
                </controls:GridLayout>
            </controls:LayoutPanel.Layout>

            <Grid Background="#BBBBBB">
                <controls:GridLayout.ColumnStart>
                    <controls:GridLocation Index="0"/>
                </controls:GridLayout.ColumnStart>
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Index="1"/>
                </controls:GridLayout.ColumnEnd>
                <controls:GridLayout.RowStart>
                    <controls:GridLocation Index="0"/>
                </controls:GridLayout.RowStart>
                <TextBlock Style="{StaticResource CellText}">S</TextBlock>
            </Grid>

            <Grid Background="#BBBBBB">
                <controls:GridLayout.ColumnStart>
                    <controls:GridLocation Index="2"/>
                </controls:GridLayout.ColumnStart>
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Index="4"/>
                </controls:GridLayout.ColumnEnd>
                <controls:GridLayout.RowStart>
                    <controls:GridLocation Index="0"/>
                </controls:GridLayout.RowStart>
                <TextBlock Style="{StaticResource CellText}">M</TextBlock>
            </Grid>

            <Grid Background="#BBBBBB">
                <controls:GridLayout.ColumnStart>
                    <controls:GridLocation Index="0"/>
                </controls:GridLayout.ColumnStart>
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Index="2"/>
                </controls:GridLayout.ColumnEnd>
                <controls:GridLayout.RowStart>
                    <controls:GridLocation Index="1"/>
                </controls:GridLayout.RowStart>
                <TextBlock Style="{StaticResource CellText}">M</TextBlock>
            </Grid>

            <Grid Background="#BBBBBB">
                <controls:GridLayout.ColumnStart>
                    <controls:GridLocation Index="3"/>
                </controls:GridLayout.ColumnStart>
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Index="5"/>
                </controls:GridLayout.ColumnEnd>
                <controls:GridLayout.RowStart>
                    <controls:GridLocation Index="1"/>
                </controls:GridLayout.RowStart>
                <TextBlock Style="{StaticResource CellText}">M</TextBlock>
            </Grid>

            <Grid Background="#BBBBBB">
                <controls:GridLayout.ColumnStart>
                    <controls:GridLocation Index="0"/>
                </controls:GridLayout.ColumnStart>
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Index="2"/>
                </controls:GridLayout.ColumnEnd>
                <controls:GridLayout.RowStart>
                    <controls:GridLocation Index="2"/>
                </controls:GridLayout.RowStart>
                <TextBlock Style="{StaticResource CellText}">M</TextBlock>
            </Grid>

            <Grid Background="#BBBBBB">
                <controls:GridLayout.ColumnStart>
                    <controls:GridLocation Index="4"/>
                </controls:GridLayout.ColumnStart>
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Index="5"/>
                </controls:GridLayout.ColumnEnd>
                <controls:GridLayout.RowStart>
                    <controls:GridLocation Index="2"/>
                </controls:GridLayout.RowStart>
                <TextBlock Style="{StaticResource CellText}">S</TextBlock>
            </Grid>

            <Grid Background="#BBBBBB">
                <controls:GridLayout.ColumnStart>
                    <controls:GridLocation Index="0"/>
                </controls:GridLayout.ColumnStart>
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Index="3"/>
                </controls:GridLayout.ColumnEnd>
                <controls:GridLayout.RowStart>
                    <controls:GridLocation Index="3"/>
                </controls:GridLayout.RowStart>
                <TextBlock Style="{StaticResource CellText}">L</TextBlock>
            </Grid>

            <Grid Background="#FFA500">
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Span="2"/>
                </controls:GridLayout.ColumnEnd>
                <TextBlock Style="{StaticResource CellText}">M</TextBlock>
            </Grid>

        </controls:LayoutPanel>

        <TextBlock Style="{StaticResource HeaderStyle}">Packing with growth</TextBlock>
        <TextBlock>Grid is 3x2 with ability to grow rows</TextBlock>
        <controls:LayoutPanel>
            <controls:LayoutPanel.Layout>
                <controls:GridLayout AutoFlow="Row">
                    <controls:GridLayout.TemplateColumns>
                        <controls:GridTrackInfo Length="100"/>
                        <controls:GridTrackInfo Length="100"/>
                        <controls:GridTrackInfo Length="100"/>
                    </controls:GridLayout.TemplateColumns>
                    <controls:GridLayout.TemplateRows>
                        <controls:GridTrackInfo Length="60"/>
                        <controls:GridTrackInfo Length="60"/>
                    </controls:GridLayout.TemplateRows>
                    <controls:GridLayout.AutoRows>
                        <controls:GridTrackInfo Length="40"/>
                    </controls:GridLayout.AutoRows>
                </controls:GridLayout>
            </controls:LayoutPanel.Layout>

            <Grid Background="#FFA500">
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Span="2"/>
                </controls:GridLayout.ColumnEnd>
                <TextBlock Style="{StaticResource CellText}">1 wide</TextBlock>
            </Grid>

            <Grid Background="#0000FF">
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Span="2"/>
                </controls:GridLayout.ColumnEnd>
                <TextBlock Style="{StaticResource CellText}">2 wide</TextBlock>
            </Grid>

            <Grid Background="#FF0000">
                <controls:GridLayout.ColumnEnd>
                    <controls:GridLocation Span="2"/>
                </controls:GridLayout.ColumnEnd>
                <TextBlock Style="{StaticResource CellText}">3 wide</TextBlock>
            </Grid>

            <Grid Background="#8FBC8F">
                <TextBlock Style="{StaticResource CellText}">4</TextBlock>
            </Grid>

            <Grid Background="#BC8FBC">
                <TextBlock Style="{StaticResource CellText}">5</TextBlock>
            </Grid>

            <Grid Background="#8FBCBC">
                <TextBlock Style="{StaticResource CellText}">6</TextBlock>
            </Grid>

        </controls:LayoutPanel>
        
    </StackPanel>

</Page>
