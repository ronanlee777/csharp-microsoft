<Page
    x:Class="MUXControlsTestApp.Samples.LayoutCycleRepro"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MUXControlsTestApp.Samples"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls">

    <Page.Resources>
        <DataTemplate x:Key="ListItemTemplate" x:DataType="local:LCItem">
            <local:LCView ViewModel="{x:Bind Mode=OneWay}" />
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="goBackButton">Back</Button>

        <controls:ItemsRepeaterScrollHost Grid.Row="1">
            <ScrollViewer x:Name="ScrollHost">
                <StackPanel>
                    <controls:ItemsRepeater x:Name="List" ItemTemplate="{StaticResource ListItemTemplate}">
                        <controls:ItemsRepeater.Layout>
                            <controls:StackLayout Orientation="Vertical"/>
                        </controls:ItemsRepeater.Layout>
                    </controls:ItemsRepeater>
                </StackPanel>
            </ScrollViewer>
        </controls:ItemsRepeaterScrollHost>
    </Grid>
</Page>
