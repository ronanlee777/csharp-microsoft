<local:TestPage
    x:Class="MUXControlsTestApp.PipsControlPage"
    x:Name="PipsControlTestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MUXControlsTestApp"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

    <StackPanel Orientation="Horizontal">
       <FlipView x:Name="Gallery"
                  Width="500" Height="500"
                  ItemsSource="{x:Bind Pictures}">
            <FlipView.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding}" Stretch="UniformToFill" />
                </DataTemplate>
            </FlipView.ItemTemplate>
        </FlipView>

        <muxc:PipsControl x:Name="pipsControl"
                          VerticalAlignment="Center"
                          NumberOfPages="{x:Bind Pictures.Count}"
                          AutomationProperties.Name="TestPipsControl"
                          NextButtonVisibility="VisibleOnHover"
                          PreviousButtonVisibility="VisibleOnHover"
                          SelectedPageIndex="{Binding ElementName=Gallery, Path=SelectedIndex, Mode=TwoWay}" />

    </StackPanel>
</local:TestPage>
