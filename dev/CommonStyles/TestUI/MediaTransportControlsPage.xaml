<local:TestPage
    x:Class="MUXControlsTestApp.MediaTransportControlsPage"
    x:Name="MediaTransportControlsTestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MUXControlsTestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="12">
        <MediaPlayerElement Source="ms-appx:///Assets/ladybug.wmv" MaxWidth="400" MaxHeight="225" AutoPlay="True" AreTransportControlsEnabled="True" />
    </Grid>
</local:TestPage>
