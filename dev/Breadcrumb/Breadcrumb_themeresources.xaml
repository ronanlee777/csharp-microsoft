<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Microsoft.UI.Xaml.Controls">

    <x:String x:Key="BreadcrumbChevronLeftToRight">&#xE76C;</x:String>
    <x:String x:Key="BreadcrumbChevronRightToLeft">&#xE76B;</x:String>

    <ResourceDictionary.ThemeDictionaries>

        <ResourceDictionary x:Key="Default">
            <StaticResource x:Key="BreadcrumbNormalForegroundBrush" ResourceKey="TextFillColorSecondaryBrush" />
            <StaticResource x:Key="BreadcrumbHoverForegroundBrush" ResourceKey="TextFillColorPrimaryBrush" />
            <StaticResource x:Key="BreadcrumbPressedForegroundBrush" ResourceKey="TextFillColorTertiaryBrush" />
            <StaticResource x:Key="BreadcrumbDisabledForegroundBrush" ResourceKey="TextFillColorDisabledBrush" />
            <StaticResource x:Key="BreadcrumbFocusForegroundBrush" ResourceKey="TextFillColorPrimaryBrush" />

            <StaticResource x:Key="BreadcrumbCurrentNormalForegroundBrush" ResourceKey="TextFillColorPrimaryBrush" />
            <StaticResource x:Key="BreadcrumbCurrentHoverForegroundBrush" ResourceKey="TextFillColorSecondaryBrush" />
            <StaticResource x:Key="BreadcrumbCurrentPressedForegroundBrush" ResourceKey="TextFillColorTertiaryBrush" />
            <StaticResource x:Key="BreadcrumbCurrentDisabledForegroundBrush" ResourceKey="TextFillColorDisabledBrush" />
            <StaticResource x:Key="BreadcrumbCurrentFocusForegroundBrush" ResourceKey="TextFillColorPrimaryBrush" />

            <SolidColorBrush x:Key="BreadcrumbBackgroundBrush" Color="Transparent"/>
            <SolidColorBrush x:Key="BreadcrumbBorderBrush" Color="Transparent"/>

            <StaticResource x:Key="BreadcrumbItemThemeFontSize" ResourceKey="ControlContentThemeFontSize" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="Light">
            <StaticResource x:Key="BreadcrumbNormalForegroundBrush" ResourceKey="TextFillColorSecondaryBrush" />
            <StaticResource x:Key="BreadcrumbHoverForegroundBrush" ResourceKey="TextFillColorPrimaryBrush" />
            <StaticResource x:Key="BreadcrumbPressedForegroundBrush" ResourceKey="TextFillColorTertiaryBrush" />
            <StaticResource x:Key="BreadcrumbDisabledForegroundBrush" ResourceKey="TextFillColorDisabledBrush" />
            <StaticResource x:Key="BreadcrumbFocusForegroundBrush" ResourceKey="TextFillColorPrimaryBrush" />

            <StaticResource x:Key="BreadcrumbCurrentNormalForegroundBrush" ResourceKey="TextFillColorPrimaryBrush" />
            <StaticResource x:Key="BreadcrumbCurrentHoverForegroundBrush" ResourceKey="TextFillColorSecondaryBrush" />
            <StaticResource x:Key="BreadcrumbCurrentPressedForegroundBrush" ResourceKey="TextFillColorTertiaryBrush" />
            <StaticResource x:Key="BreadcrumbCurrentDisabledForegroundBrush" ResourceKey="TextFillColorDisabledBrush" />
            <StaticResource x:Key="BreadcrumbCurrentFocusForegroundBrush" ResourceKey="TextFillColorPrimaryBrush" />

            <SolidColorBrush x:Key="BreadcrumbBackgroundBrush" Color="Transparent"/>
            <SolidColorBrush x:Key="BreadcrumbBorderBrush" Color="Transparent"/>

            <StaticResource x:Key="BreadcrumbItemThemeFontSize" ResourceKey="ControlContentThemeFontSize" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="HighContrast">
            <StaticResource x:Key="BreadcrumbNormalForegroundBrush" ResourceKey="SystemColorButtonTextColor" />
            <StaticResource x:Key="BreadcrumbHoverForegroundBrush" ResourceKey="SystemColorHighlightColor" />
            <StaticResource x:Key="BreadcrumbPressedForegroundBrush" ResourceKey="SystemColorHighlightColor" />
            <StaticResource x:Key="BreadcrumbDisabledForegroundBrush" ResourceKey="SystemColorGrayTextColor" />
            <StaticResource x:Key="BreadcrumbFocusForegroundBrush" ResourceKey="SystemColorHighlightColor" />

            <StaticResource x:Key="BreadcrumbCurrentNormalForegroundBrush" ResourceKey="SystemColorHighlightColor" />
            <StaticResource x:Key="BreadcrumbCurrentHoverForegroundBrush" ResourceKey="SystemColorButtonTextColor" />
            <StaticResource x:Key="BreadcrumbCurrentPressedForegroundBrush" ResourceKey="SystemColorHighlightColor" />
            <StaticResource x:Key="BreadcrumbCurrentDisabledForegroundBrush" ResourceKey="SystemColorGrayTextColor" />
            <StaticResource x:Key="BreadcrumbCurrentFocusForegroundBrush" ResourceKey="SystemColorHighlightColor" />

            <StaticResource x:Key="BreadcrumbBackgroundBrush" ResourceKey="SystemColorButtonFaceColor" />
            <StaticResource x:Key="BreadcrumbBorderBrush" ResourceKey="SystemColorButtonFaceColor" />

            <StaticResource x:Key="BreadcrumbItemThemeFontSize" ResourceKey="ControlContentThemeFontSize" />
        </ResourceDictionary>
        
    </ResourceDictionary.ThemeDictionaries>
    
</ResourceDictionary>
