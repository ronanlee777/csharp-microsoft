                    </l:ViewDefinition.ItemTemplate>
                </l:ViewDefinition>
            </l:ItemsView>

            <l:ItemsView x:Name="gridView" ItemsSource="{Binding Books}">
                <l:ViewDefinition Layout="{StaticResource gridLayout}">
                    <l:ViewDefinition.ItemTemplate>
                        <c:RecyclingElementFactory RecyclePool="{StaticResource recyclePool}">
                            <DataTemplate x:Key="FlowItemTemplate">
                                <l:ItemsViewItem Layout="{StaticResource stackLayout}" Background="LightGray" BorderBrush="Gray" BorderThickness="1">
                                    <TextBlock Text="{Binding Title}" />
                                    <TextBlock Text="{Binding Author}" />
                                    <TextBlock Text="{Binding Genre}" />
                                    <TextBlock Text="{Binding Price}" />
                                    <TextBlock Text="{Binding ID}" />
                                </l:ItemsViewItem>
                            </DataTemplate>
                        </c:RecyclingElementFactory>
                    </l:ViewDefinition.ItemTemplate>
                </l:ViewDefinition>
            </l:ItemsView>

            <l:ItemsView x:Name="tableView" ItemsSource="{Binding Books}">
                <l:ViewDefinition Layout="{StaticResource stackLayout}">
                    <l:ViewDefinition.Header>
                        <l:TableHeaderRow Layout="{StaticResource sharedRowLayout}" >
                            <TextBlock Text="Title"/>
                            <TextBlock Text="Author" />
                            <TextBlock Text="Genre"/>
                            <TextBlock Text="Price" />
                            <TextBlock Text="ID"/>
                        </l:TableHeaderRow>
                    </l:ViewDefinition.Header>
                    <l:ViewDefinition.ItemTemplate>
                        <c:RecyclingElementFactory RecyclePool="{StaticResource recyclePool}" >
                            <DataTemplate x:Key="RowTemplate" >
                                <l:TableRow Background="LightBlue" Layout="{StaticResource sharedRowLayout}">
                                    <TextBlock Text="{Binding Title}" />
                                    <TextBlock Text="{Binding Author}" />
                                    <TextBlock Text="{Binding Genre}" />
                                    <TextBlock Text="{Binding Price}" />
                                    <TextBlock Text="{Binding ID}" />
                                </l:TableRow>
                            </DataTemplate>
                        </c:RecyclingElementFactory>
                    </l:ViewDefinition.ItemTemplate>
                </l:ViewDefinition>
            </l:ItemsView>


            <l:ItemsView x:Name="groupedTableView" ItemsSource="{Binding ByGenre, ElementName=Root}">
                <l:ViewDefinition Layout="{StaticResource stackLayout}">
                    <l:ViewDefinition.Header>
                        <l:TableHeaderRow Layout="{StaticResource sharedRowLayout}" Background="LightGray">
                            <TextBlock Text="Title" />
                            <TextBlock Text="Author" />
                            <TextBlock Text="Genre" />
                            <TextBlock Text="Price" />
                            <TextBlock Text="ID" />
                        </l:TableHeaderRow>
                    </l:ViewDefinition.Header>
                    <l:ViewDefinition.ItemTemplate>
                        <l:HierarchicalDataTemplate ItemsSource="{Binding}">
