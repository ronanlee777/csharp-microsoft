                                                <ColorAnimationUsingKeyFrames Storyboard.TargetName="HorizontalThumb"
                                                                          Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                                                    <LinearColorKeyFrame KeyTime="00:00:00.1" Value="Gold" />
