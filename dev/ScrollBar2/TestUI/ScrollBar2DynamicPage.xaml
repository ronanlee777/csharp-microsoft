                                                    <LinearColorKeyFrame KeyTime="00:00:02.1" Value="Navy" />
                                                </ColorAnimationUsingKeyFrames>
                                                <ColorAnimationUsingKeyFrames Storyboard.TargetName="VerticalThumb"
                                                                          Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                                                    <LinearColorKeyFrame KeyTime="00:00:00.1" Value="Gold" />
                                                    <LinearColorKeyFrame KeyTime="00:00:02" Value="Gold" />
